<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/fragment_horizontal_margin"
    android:paddingRight="@dimen/fragment_horizontal_margin"
    android:orientation="horizontal">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_provider"
        android:layout_height="@dimen/agenda_item_image_size"
        android:layout_width="@dimen/agenda_item_image_size"
        android:layout_margin="@dimen/agenda_item_margin"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/colorPrimary"/>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/agenda_item_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_provider_name"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="@dimen/agenda_item_name_text_size"
            android:textColor="@color/colorAccent"
            tools:text="Jose Estupinan" />

        <TextView
            android:id="@+id/txt_service_name"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="@dimen/agenda_item_info_text_size"
            tools:textColor="@android:color/holo_red_dark"
            tools:text="Electrodomesticos - Lavadora" />

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/agenda_item_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_date"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textAlignment="textEnd"
            android:textSize="@dimen/agenda_item_info_text_size"
            android:textColor="@color/colorAccent"
            tools:text="Jueves 18" />

        <TextView
            android:id="@+id/txt_hour"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textAlignment="textEnd"
            android:textSize="@dimen/agenda_item_info_text_size"
            android:textColor="@color/colorAccent"
            tools:text="15:00" />

    </LinearLayout>

</LinearLayout>