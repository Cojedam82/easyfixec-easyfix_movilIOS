<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/item_agenda_foto"
        android:layout_margin="10dp"
        android:background="@drawable/button_round"
        android:layout_width="50dp"
        android:layout_height="50dp" />


    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:text="Jose Estupinan"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:id="@+id/item_agenda_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Electrodomesticos - Lavadora"
            android:textSize="14sp"
            android:textColor="@android:color/holo_red_dark"
            android:id="@+id/item_agenda_categoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:text="Jueves 18"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:id="@+id/item_agenda_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textAlignment="textEnd"
            android:text="15:00"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:id="@+id/item_agenda_hora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>