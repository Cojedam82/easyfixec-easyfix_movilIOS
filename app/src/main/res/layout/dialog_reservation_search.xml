<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_reservation_search"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_75"
    android:layout_above="@+id/bottom_navigation"
    android:clickable="true"
    android:visibility="gone"
    android:elevation="24dp">

    <RelativeLayout
        android:id="@+id/rl_reservation_search_msg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/ly_reservation_search_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/activity_vertical_margin"
            android:gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_reservation_search"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/logo_white"
                app:civ_border_width="3dp"
                app:civ_border_color="@color/textColorPrimary"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:textColor="@color/textColorPrimary"
                android:gravity="center"
                android:text="Estamos buscando lo que necesitas"/>

            <TextView
                android:id="@+id/txt_service_name_reservation_search"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:ellipsize="marquee"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@android:color/holo_red_dark"
                android:text="Electrodomesticos - Lavadora" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"
                android:textColor="@color/textColorPrimary"
                android:gravity="center"
                android:text="En Espera"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/img_close_reservation_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/activity_vertical_min_margin"
            android:layout_marginRight="@dimen/activity_vertical_min_margin"
            android:layout_alignTop="@+id/ly_reservation_search_msg"
            android:layout_alignRight="@+id/ly_reservation_search_msg"
            android:layout_alignEnd="@+id/ly_reservation_search_msg"
            android:tint="@color/white"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_delete"/>

    </RelativeLayout>
</RelativeLayout>