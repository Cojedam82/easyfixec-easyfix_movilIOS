<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:paddingTop="@dimen/app_toolbar_button_menu_vertical_padding"
    android:paddingBottom="@dimen/app_toolbar_button_menu_vertical_padding"
    android:paddingLeft="@dimen/app_toolbar_button_menu_horizontal_padding"
    android:paddingRight="@dimen/app_toolbar_button_menu_horizontal_padding">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_menu_profile"
            android:layout_width="@dimen/app_toolbar_button_menu_size"
            android:layout_height="@dimen/app_toolbar_button_menu_size"
            android:src="@drawable/ic_empty_profile"/>

        <TextView
            android:id="@+id/txt_toolbar_title"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/app_toolbar_tile_text_size"
            android:textAlignment="center"
            android:gravity="center"
            tools:text="BÃºsqueda"
            tools:ignore="MissingPrefix"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_menu_setting"
            android:layout_width="@dimen/app_toolbar_button_menu_size"
            android:layout_height="@dimen/app_toolbar_button_menu_size"
            android:src="@drawable/ic_settings"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/textColorPrimary"/>

    </LinearLayout>

</android.support.design.widget.AppBarLayout>