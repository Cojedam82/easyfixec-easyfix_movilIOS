<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/mapLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/base" >

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="21dp"
            android:src="@drawable/marker"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/map_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:visibility="gone"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:text="Guardar Dirección"
        android:background="@color/colorPrimaryDark"
        android:textSize="@dimen/auth_activity_action"
        android:textColor="@color/white"
        android:textAllCaps="false"/>

    <LinearLayout
        android:id="@+id/base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:paddingBottom="@dimen/activity_vertical_min_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_close"
                android:layout_width="30dp"
                android:layout_gravity="center"
                android:layout_height="30dp"
                android:alpha=".7"
                android:src="@drawable/ic_delete"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                app:cardElevation="3dp">

                <TextView
                    android:id="@+id/txt_autocomplete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/activity_vertical_min_margin"
                    android:hint="Ingrese dirección particular"
                    android:onClick="showAutocomplete"
                    android:gravity="center_vertical"
                    android:background="?android:attr/windowBackground"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="5dp"
            app:cardElevation="3dp"
            android:visibility="gone">

            <EditText
                android:id="@+id/txt_reference"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_vertical_min_margin"
                android:hint="Ingrese una referencia (Opcional)"
                android:gravity="center_vertical"
                android:background="?android:attr/windowBackground"
                android:textSize="14sp"
                android:visibility="gone"/>

        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/imageviewBar"
            android:layout_width="40dp"
            android:layout_height="5dp"
            android:background="@color/black_35"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:text="¿Dónde deseas al técnico?" />

        <include layout="@layout/progressbar"/>
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/addDirection"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/fragment_horizontal_margin"
            android:layout_marginRight="@dimen/fragment_horizontal_margin"
            android:orientation="horizontal">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_status_icon"
                android:layout_width="@dimen/address_item_image_size"
                android:layout_height="@dimen/address_item_image_size"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:src="@drawable/address" />


            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/notification_item_margin"
                android:orientation="vertical">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/notification_item_name_text_size"
                    android:id="@+id/titulo"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Agregar Dirección" />


            </LinearLayout>


        </LinearLayout>
        <ImageView
            android:id="@+id/separatorbar"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/black_35"
            android:layout_gravity="center"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_address"
            android:layout_height="150dp"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/service_fragment_list_padding"
            android:paddingRight="@dimen/service_fragment_list_padding"
            android:visibility="visible"/>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/Scheduler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:visibility="gone"
        android:paddingBottom="@dimen/activity_vertical_min_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_alignParentBottom="true"
        android:layout_above="@+id/header"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_close_Scheduler"
                android:layout_width="30dp"
                android:layout_gravity="center"
                android:layout_height="30dp"
                android:alpha=".7"
                android:src="@drawable/ic_delete"/>


        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="5dp"
            app:cardElevation="3dp"
            android:visibility="gone">

            <EditText
                android:id="@+id/txt_reference_Scheduler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_vertical_min_margin"
                android:hint="Ingrese una referencia (Opcional)"
                android:gravity="center_vertical"
                android:background="?android:attr/windowBackground"
                android:textSize="14sp"
                android:visibility="gone"/>

        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/imageviewBar_Scheduler"
            android:layout_width="40dp"
            android:layout_height="5dp"
            android:background="@color/black_35"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/textView2_Scheduler"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:layout_height="wrap_content"
            android:text="¿Cuánto puedes esperar?" />

        <include layout="@layout/progressbar"/>
        <ImageView
            android:id="@+id/separatorbar_Scheduler"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/black_35"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:orientation="horizontal">

            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3">
            <TextView
                android:id="@+id/oneHour_Scheduler"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/com_facebook_messenger_blue"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:text="@string/dialog_1_hour" />
        </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3">
                <TextView
                    android:id="@+id/twoHour_Scheduler"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_2_hours" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3">
                <TextView
                    android:id="@+id/schedule_Scheduler"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"
                    android:text="@string/action_service_detail_schedule" />
            </RelativeLayout>



        </LinearLayout>
        <Button
            android:id="@+id/btn_update_Scheduler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/map_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:gravity="center"
            android:text="Solicitar Técnico"
            android:background="@color/colorPrimaryDark"
            android:textSize="@dimen/auth_activity_action"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:onClick="attemptCreate"/>



    </LinearLayout>
    </LinearLayout>

</RelativeLayout>